        <TableRow>

            <TextView
                android:layout_column="1"
                android:background="@drawable/border_cells"
                android:padding="10dp"
                android:text="Projet n째3"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
